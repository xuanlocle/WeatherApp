<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TypefaceView">
        <attr name="fontType" format="enum">
            <enum name="light" value="0" />
            <enum name="regular" value="1" />
            <enum name="bold" value="2" />
            <enum name="italic" value="3" />
        </attr>
        <attr name="fontSize" format="enum">
            <enum name="small" value="0" />
            <enum name="normal" value="1" />
            <enum name="title" value="2" />
            <enum name="huge" value="3" />
        </attr>
    </declare-styleable>


</resources>